<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id= "<%= portfolio_item.id %>">

      <%= link_to (image_tag (portfolio_item.main_image_url(:thumb).to_s), width: '100%'), portfolio_show_path(portfolio_item) %>

    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span><%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'View', portfolio_show_path(portfolio_item) %></button>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%=   link_to 'Edit', edit_portfolio_path(portfolio_item)%></button>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
