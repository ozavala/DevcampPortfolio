<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Oswaldo Zavala Portfolio", sticky: false, time: 10000) %>
  <% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Oswaldo Zavala Portfolio", sticky: false) %>
  <% else %>
  <%= js add_gritter(flash[:notice], title: "Oswaldo Zavala Portfolio", sticky: false) %>
<% end %>
